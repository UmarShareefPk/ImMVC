    @model IM.Models.UserLoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //Layout = null;

    string error = "";
    if(TempData["loginError"] != null)
        error = "Invalid username or password";
}

 <link href="~/css/login.css" rel="stylesheet"  asp-append-version="true" />

<div class="login-page">

    <div class="row">
        <div class="col-xl-6 col-lg-6 d-none d-lg-block">
            <div class="login-logo">
                <img src="/img/logoBigWhite.png" width="70%" />
            </div>
        </div>

        <div class="col-xl-6  col-lg-6 col-md-12 col-sm-12">
            <div class="login-container">

                <form action="/Account/Login" method="post">
                    <div class="d-lg-none form-group mb-4">
                        <img src="/img/logo-white.png" class="mr-4" width="70%" />
                    </div>
                    <h4 class="form-group font-weight-bold text-white">Welcome</h4>
                    <br />
                    <h6 class="form-group text-white">Please Login</h6>
                    <br />

                    <div class="form-group text-white" style="">
                        <label for="username">  <i class="material-icons">person</i> <span>Username</span> </label>
                        <input type="text" class="form-control" name="username" value="@(Model is not null? Model.Username : "")"  id="username" placeholder="Enter Username" />
                    </div>
                    <div class="form-group text-white" style="">
                        <label for="password">  <i class="material-icons">password</i> <span>Password</span>  </label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password" />
                    </div>

                    <div class="form-group text-danger" style="">
                        <label class="text-danger"> @error </label>
                    </div>

                    <div class="form-group" style="">
                        <button type="submit" class="login-btn btn btn-success btn-lg im-btn">
                            <span>Login</span> <i class="material-icons">login</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@{
}
